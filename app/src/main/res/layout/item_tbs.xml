<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:minHeight="130dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/cardview"
    >

    <RelativeLayout
        android:padding="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/topic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/dp_10"
            android:text="xxxx "
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <com.legend.tbs.common.CircleImageView
            android:id="@+id/qq_image"
            android:src="@drawable/ic_loading_public"
            android:layout_alignParentEnd="true"
            android:paddingRight="@dimen/dp_10"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <TextView
            android:id="@+id/from_Nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topic_name"
            android:paddingTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:text="简单介绍"
            android:textSize="15sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/from_qq"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text=" QQ号"
            android:textSize="17sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/real_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qq_image"
            android:layout_alignParentEnd="true"
            android:paddingRight="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxEms="6"
            android:text="xxxxxx"
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
